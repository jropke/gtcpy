<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/txtNam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=""
            android:textStyle="bold"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/txtFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txtNam"
            android:layout_marginTop="5dp"
            android:text="Nombre_txt "
            android:textSize="40sp"
            />

        <TextView
            android:id="@+id/txtLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/txtFirstName"
            android:textSize="20sp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <ImageButton
            android:id="@+id/txtema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@android:drawable/ic_dialog_map"
            android:layout_alignBottom="@+id/txtEmailID"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txtEmailID"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txtema"
            android:layout_marginTop="5dp"
            android:text="Localidad_txt "
            android:textSize="20sp"
            />

        <ImageButton
            android:id="@+id/guardar"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:onClick="deleteContact"
            android:text="guardar"
            android:textSize="15dp"
            android:background="@android:drawable/ic_input_add"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/txtEmailID"
            android:layout_alignEnd="@+id/txtEmailID" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/txtPhone"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:text="TelÃ©fono_txt "
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/txtPhn"
            android:layout_toEndOf="@+id/txtPhn" />



        <ImageButton
            android:id="@+id/txtPhn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="editContact"
            android:text="llamar"
            android:textSize="15dp"

            android:background="@android:drawable/ic_menu_call"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/txtPhone"
            android:layout_alignEnd="@+id/txtPhone"
            android:layout_marginRight="52dp"
            android:layout_marginEnd="52dp" />

    </RelativeLayout>

</LinearLayout>