<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:fillViewport="false"
    android:background="#282760">
    <!-- lindo celeste android:background="#2990ff" -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/detail_photo"
                        android:layout_width="@dimen/photo_width"
                        android:layout_height="@dimen/photo_height"
                        android:layout_marginTop="@dimen/photo_top_margin"
                        android:layout_marginLeft="@dimen/photo_left_margin"
                        android:src="@drawable/photo" />
                    <ImageView
                        android:layout_width="@dimen/photoframe_width"
                        android:layout_height="@dimen/photoframe_height"
                        android:src="@drawable/photoframe" />
                </RelativeLayout>

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height = "wrap_content"
                            android:layout_weight="1.0"
                            android:text="@string/detailpage_initials"
                            android:layout_marginTop="@dimen/photo_top_margin"
                            android:paddingTop ="10dp"
                            android:paddingBottom ="10dp"
                            android:paddingLeft ="5dp"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            />
                        <TextView
                            android:id ="@+id/detail_initials"
                            android:layout_width = "wrap_content"
                            android:layout_height = "wrap_content"
                            android:layout_marginTop="@dimen/photo_top_margin"
                            android:paddingTop ="10dp"
                            android:paddingBottom ="10dp"
                            android:layout_weight="3.0"  />
                    </TableRow>
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height = "wrap_content"
                            android:layout_weight="1.0"
                            android:text="@string/detailpage_name"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            android:paddingTop ="10dp"
                            android:paddingBottom ="10dp"
                            android:paddingLeft ="5dp"
                            />
                        <TextView
                            android:id ="@+id/detail_name"
                            android:layout_width = "wrap_content"
                            android:layout_height = "wrap_content"
                            android:layout_weight="3.0"
                            android:paddingTop ="10dp"
                            android:paddingBottom ="10dp" />
                    </TableRow>
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height = "wrap_content"
                            android:layout_weight="1.0"
                            android:text="@string/detailpage_localname"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            android:paddingTop="10dp"
                            android:paddingBottom ="10dp"
                            android:paddingLeft ="5dp"
                            />
                        <TextView
                            android:id ="@+id/detail_localname"
                            android:layout_width = "wrap_content"
                            android:layout_height = "wrap_content"
                            android:layout_weight="3.0"
                            android:paddingTop ="10dp"
                            android:paddingBottom ="10dp" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height = "wrap_content"
                        android:layout_weight="1.0"
                        android:text="@string/detailpage_gender"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:paddingTop="10dp"
                        android:paddingBottom ="10dp"
                        android:paddingLeft ="5dp"
                        />
                    <TextView
                        android:id ="@+id/detail_gender"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:layout_weight="3.0"
                        android:paddingTop ="10dp"
                        android:paddingBottom ="10dp" />
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height = "wrap_content"
                        android:layout_weight="1.0"
                        android:text="@string/detailpage_phone"
                        android:padding="10dp"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                         />
                    <TextView
                        android:id ="@+id/detail_phone"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:layout_weight="3.0"  />
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height = "wrap_content"
                        android:layout_weight="1.0"
                        android:text="@string/detailpage_title"
                        android:padding="10dp"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        />
                    <TextView
                        android:id ="@+id/detail_title"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:layout_weight="3.0"  />
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height = "wrap_content"
                        android:layout_weight="1.0"
                        android:text="@string/detailpage_depno"
                        android:padding="10dp"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF" />
                    <TextView
                        android:id ="@+id/detail_departmentNo"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:layout_weight="3.0"  />


                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height = "wrap_content"
                        android:layout_weight="1.0"
                        android:text="@string/detailpage_depname"
                        android:padding="10dp"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF" />
                    <TextView
                        android:id ="@+id/detail_department"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:layout_weight="3.0"  />
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height = "wrap_content"
                        android:layout_weight="1.0"
                        android:text="@string/detailpage_manager"
                        android:padding="10dp"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF" />
                    <TextView
                        android:id ="@+id/detail_manager"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:layout_weight="3.0"  />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>