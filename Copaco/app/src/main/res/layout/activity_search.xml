<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ImageView 
        android:id="@+id/searcher_bk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_centerInParent="true" 
        android:background="@drawable/searcher_box"/>
     <ImageButton 
        android:id="@+id/searcher_closebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/searcher_bk"
        android:layout_alignRight="@id/searcher_bk"
        android:layout_marginTop="@dimen/widget_searcher_closebtn_topmargin"
	   	android:layout_marginRight="@dimen/widget_searcher_closebtn_rightmargin"
        android:background="@layout/selector_searcher_btn_close"/>
    <TableLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_centerInParent="true"
        android:paddingTop="@dimen/widget_searcher_toppadding">
        <TableRow 
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content">

            <EditText
                android:id="@+id/searcher_initials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="4"
                android:inputType="textNoSuggestions"
                android:layout_marginRight="@dimen/widget_searcher_intials_rightmargin"
                 />
			<ImageButton
			    android:id="@+id/searcher_searchbtn"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="@dimen/widget_searcher_searchbtn_leftmargin"
			    android:background="@layout/selector_searcher_btn_search" />
        </TableRow>
    </TableLayout>

</RelativeLayout>
