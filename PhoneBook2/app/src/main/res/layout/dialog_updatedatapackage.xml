<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_datapackagefile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dip"
        android:text="@string/datapackage_file" />

    <EditText
        android:id="@+id/et_datapackagefilename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_datapackagefile"
        android:layout_below="@+id/tv_datapackagefile"
        android:layout_toLeftOf="@+id/btn_browserdatapackage"
        android:editable="false"
        android:ems="9" >
    </EditText>

    <Button
        android:id="@+id/btn_browserdatapackage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_datapackagefile"
        android:text="@string/browse" />

</RelativeLayout>